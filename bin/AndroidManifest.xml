<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ffm.sersanorsensors"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".S1Activity"
            android:label="@string/title_activity_s1"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".S2Activity"
            android:label="@string/title_activity_s2"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".S4Activity"
            android:label="@string/title_activity_s4"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".S7Activity"
            android:label="@string/title_activity_s7" >
        </activity>
    </application>

</manifest>
